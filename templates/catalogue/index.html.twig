{% extends 'base.html.twig' %}

{% block title %}Catalogue index{% endblock %}

{% block body %}
    <h1>Catalogue index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for catalogue in catalogues %}
            <tr>
                <td>{{ catalogue.name }}</td>
                <td>
                    <a href="{{ path('app_catalogue_show', {'id': catalogue.id}) }}">show</a>
                    <a href="{{ path('app_catalogue_edit', {'id': catalogue.id}) }}">edit</a>
                </td>
            </tr>
            <tr>
            <td>
            {% for subCate in catalogue.subCategories %}
                {{ subCate.name }}
            {% endfor %}
            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_catalogue_new') }}">Create new</a>
{% endblock %}
